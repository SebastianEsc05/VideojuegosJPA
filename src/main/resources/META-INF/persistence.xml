<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="VideojuegosJPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>entities.Jugador</class>
        <class>entities.Direccion</class>
        <class>entities.Videojuego</class>
        <class>entities.Logro</class>

        <properties>
            <!-- Datos de conexión -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/VideojuegosJPA"/>
            <property name="jakarta.persistence.jdbc.user" value="sebas"/>
            <property name="jakarta.persistence.jdbc.password" value="123456"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
